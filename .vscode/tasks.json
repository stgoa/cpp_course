{
    "version": "2.0.0",
    "tasks": [
        {
			"type": "cppbuild",
			"label": "Build with GCC",
			"command": "g++-11",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: g++-11"
		}
    ]
}